                },
                {
                  icon: 'mdi:github',
                  href: 'https://github.com/will-carkner',
                },
                {
                  icon: 'ic:round-email',
                  href: 'mailto:will@willcarkner.com',
                },
              ].map((item) => (
                <a
                  href={item.href}
                  target="_blank"
                  class="hover:duration-300 hover:scale-110"
                >
                  <Icon
                    class="w-10 h-10 text-gray-300 hover:text-sky-400"
                    name={item.icon}
                  />
                </a>
              ))
            }
          </div>
