---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Section from '../components/Section.astro'
import ArticleDisplay from '../components/ArticleDisplay.astro'
import { getPosts } from '../utils/funcs'
import Project from '../components/Project.astro'
import { Icon } from 'astro-icon'

const posts = (await getPosts()).slice(0, 3)
---

<Layout title="Will Carkner">
  <!-- BODY -->
  <Section>
    <div class="grid w-full grid-cols-1 gap-8 md:flex-row md:flex">
      <!-- ABOUT ME -->
      <div class="md:flex-1 space-y-8">
        <div
          class="rounded-xl bg-gradient-to-r from-blue-600 to-violet-600 p-0.5"
        >
          <Card class="items-left !shadow-none">
            <div class="flex-col text-left space-y-4 flex">
              <img
                alt="Will Carkner"
                src="will.jpg"
                class="rounded-lg w-24 h-24"
              /><h2>Will Carkner</h2>
              <p class="text-gray-400 font-mono bold-slate-p text-justify">
                I'm a {
                  Math.abs(
                    new Date(
                      Date.now() - new Date(2006, 8, 28).getTime()
                    ).getUTCFullYear() - 1970
                  )
                }{' '}
                year old <b>full-stack developer</b>, based in Dublin. I
                <b>love</b> to build stuff!
              </p><p class="text-gray-400 font-mono bold-slate-p text-justify">
                I work on physical and web products that could have a <b
                  >big impact on the world</b
                >.
              </p>
              <div
                class="flex flex-row space-x-1 items-center justify-center w-32 bg-white rounded-2xl p-1"
              >
                <Icon
                  class="w-6 h-6"
                  name="mdi:github"
                  color="black"
                  stroke-width="1.5"
                />
                <a
                  class="text-black text-xs font-bold no-underline"
                  href="https://github.com/will-carkner"
                >
                  FOLLOW ME
                </a>
              </div>
            </div>
          </Card>
        </div>
        <!-- Writing -->
        <ArticleDisplay home={true} title="Writings" posts={posts} />
        <!-- Stack -->
        <Card class="space-y-2">
          <h4>My Stack</h4>
          <p class="text-gray-400 font-mono">From idea to implementation</p>
          <div class="grid grid-cols-3 py-3 justify-center items-center gap-4">
            {
              [
                {
                  logo: 'react.png',
                  alt: 'React',
                  href: 'https://reactjs.org',
                },

                {
                  logo: 'tw.png',
                  alt: 'Tailwind CSS',
                  href: 'https://tailwindcss.com',
                },
                {
                  logo: 'next.png',
                  alt: 'NextJS',
                  href: 'https://nextjs.org',
                  // class: '!aspect-[1/1]',
                },
                {
                  logo: 'astro.png',
                  alt: 'Astro',
                  href: 'https://astro.build',
                },
                {
                  logo: 'vercel.png',
                  alt: 'Vercel',
                  href: 'https://vercel.com',
                },
                {
                  logo: 'ts.png',
                  alt: 'TypeScript',
                  href: 'https://typescriptlang.org',
                },
              ].map((item) => (
                <a href={item.href} target="_blank" class="hover:scale-110">
                  <img class="w-20 h-20" src={item.logo} alt={item.alt} />
                </a>
              ))
            }
          </div>
        </Card>
      </div>
      <!-- Podcasts -->
      <div class="md:flex-1 space-y-8">
        <Card>
          <div class="space-y-4">
            <h4>Podcasts I Love</h4>
            <div
              class="flex flex-row space-x-2 md:space-x-4 items-center justify-center"
            >
              {
                [
                  {
                    img: 'pods/huberman.jpg',
                    alt: 'huberman lab',
                    href: 'https://hubermanlab.com',
                  },
                  {
                    img: 'pods/fridman.jpg',
                    alt: 'lex fridman',
                    href: 'https://lexfridman.com/podcast/',
                  },
                  {
                    img: 'pods/hours.jpg',
                    alt: '80,000 hours',
                    href: 'https://80000hours.org/podcast/',
                  },
                  {
                    img: 'pods/questions.jpg',
                    alt: 'deep questions',
                    href: 'https://www.thedeeplife.com/listen/',
                  },
                ].map((item) => (
                  <a href={item.href} target="_blank" class="hover:scale-110">
                    <img
                      alt={item.alt}
                      class="w-20 h-20 rounded-lg"
                      src={item.img}
                    />
                  </a>
                ))
              }
            </div>
          </div>
        </Card>
        <!-- Projects -->
        <Card class="space-y-4">
          <h4>My Work</h4>
          <!-- TODO: Add animations -->
          <!-- TODO: Change design completely -->
          {
            [
              {
                title: 'Founders Site',
                tags: ['Astro', 'Tailwind', 'Client Work'],
                image: 'founders.jpg',
                url: 'https://joinfounders.co',
                class: '',
              },
              {
                title: 'BloodBox',
                tags: ['Hardware', 'Research', 'MedTech'],
                image: 'bloodbox.jpg',
                url: 'https://bloodbox.info',
              },
              {
                title: 'Congestion Pricing',
                tags: ['Research', 'Economics', 'Data'],
                image: 'congestion.jpg',
                class: 'aspect-[3/2]',
                url: 'https://drive.google.com/file/d/1KlU16SRe7rNavkPd86SrDLHjNzC_nRws/view?usp=sharing',
              },
            ].map((item) => (
              <Project
                title={item.title}
                tags={item.tags}
                image={item.image}
                url={item.url}
                class={item.class}
              />
            ))
          }
        </Card>
        <!-- Music -->
        <!-- <Card>
          <div></div>
        </Card> -->
        <!-- Contact -->
        <Card class="space-y-2">
          <h4>Get in Touch</h4>
          <p class="font-mono text-gray-400 text-sm">
            I'm always looking for opportunities and I love meeting new people!
          </p>
          <div class="flex flex-row space-x-2">
            {
              [
                {
                  icon: 'mdi:linkedin',
                  href: 'https://www.linkedin.com/in/will-carkner-518b77228/',
                },
                {
                  icon: 'mdi:github',
                  href: 'https://github.com/will-carkner',
                },
                {
                  icon: 'ic:round-email',
                  href: 'mailto:will@willcarkner.com',
                },
              ].map((item) => (
                <a
                  href={item.href}
                  target="_blank"
                  class="hover:duration-300 hover:scale-110"
                >
                  <Icon
                    class="w-10 h-10 text-gray-300 hover:text-gray-200"
                    name={item.icon}
                  />
                </a>
              ))
            }
          </div>
        </Card>
      </div>
    </div>
  </Section>
</Layout>
