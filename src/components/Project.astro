---
interface Props {
  title: string
  tags: string[]
  image: string
  url: string
  class?: string
}

const { title, tags, image, url, class: className } = Astro.props
---

<a href={url} target="_blank" class="no-underline w-full">
  <div
    class:list={[
      'flex flex-row items-center duration-300 space-x-4 hover:scale-110',
    ]}
  >
    <img
      src={image}
      class:list={['h-24 w-auto border border-gray-600 rounded-lg', className]}
      alt={title + 'image'}
    />
    <div class="flex flex-col space-y-2 text-left">
      <p class="sm:text-2xl text-xl font-mono font-semibold">
        {title}
      </p>
      <div
        class="flex flex-wrap xs:flex-nowrap xs:flex-row xs:space-y-0 items-center justify-start space-x-2"
      >
        {
          tags.map((tag) => (
            <span
              class:list={[
                'bg-slate-600 w-fit bg-opacity-50 text-xs shadow-lg rounded-md px-2 py-1 text-white',
                tags.indexOf(tag) === tags.length - 1
                  ? 'mt-2 xs:mt-0 -translate-x-2 xs:translate-x-0'
                  : '',
              ]}
            >
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</a>
